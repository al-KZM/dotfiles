###---Modes Definition---###
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# resize window mode (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        set $move 10
        set $_halfmove 5
        set $supermove 26
        set $_halfsupermove 12

        bindsym h resize shrink width $move px or $move ppt
        bindsym j resize grow height $move px or $move ppt
        bindsym k resize shrink height $move px or $move ppt
        bindsym l resize grow width $move px or $move ppt

        bindsym Shift+h resize shrink width $supermove px or $supermove ppt
        bindsym Shift+k resize grow height $supermove px or $supermove ppt
        bindsym Shift+j resize shrink height $supermove px or $supermove ppt
        bindsym Shift+l resize grow width $supermove px or $supermove ppt

        # move focused window
        bindsym $mod+Shift+h move left
        bindsym $mod+Shift+j move down
        bindsym $mod+Shift+k move up
        bindsym $mod+Shift+l move right

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Shift+Left resize shrink width 25 px or 25 ppt
        bindsym Shift+Down resize grow height 25 px or 25 ppt
        bindsym Shift+Up resize shrink height 25 px or 25 ppt
        bindsym Shift+Right resize grow width 25 px or 25 ppt


        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
